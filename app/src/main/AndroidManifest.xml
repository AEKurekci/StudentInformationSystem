<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentinformationsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Messages"></activity>
        <activity android:name=".AcademistEntry" />
        <activity android:name=".AttendanceOfPrep" />
        <activity android:name=".PrepSchoolProcess" />
        <activity android:name=".ExamCalendar" />
        <activity android:name=".AcademicCalendar" />
        <activity android:name=".Syllabus" />
        <activity android:name=".Transcript" />
        <activity android:name=".Attendance" />
        <activity
            android:name=".GradeInformation"
            android:label="@string/title_activity_grade_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainPage" />
        <activity android:name=".StudentEntry" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>