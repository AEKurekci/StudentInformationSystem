<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtClassName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Ders AdÄ±"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtViseGrade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vize"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtFinalGrade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Final"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtLetter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Harf Notu"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtSituation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Durumu"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listGrades"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>